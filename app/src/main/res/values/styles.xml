<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 视图一般样式 -->
    <style name="my_layout_style_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/layout_bg</item>
    </style>

    <!-- 视图顶部栏默认布局样式 -->
    <style name="my_layout_navbar_style" parent="@android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/navbar_layout_height</item>
        <item name="android:background">@color/navbar_bg</item>
    </style>

    <!-- 视图内容栏布局样式(四边有外间隔) -->
    <style name="my_layout_content_margin_style" parent="@android:style/Widget">
        <item name="android:layout_marginTop">@dimen/margin_top_size_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_size_default</item>
        <item name="android:layout_marginLeft">@dimen/margin_medium</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
    </style>

    <!-- 视图内容栏布局样式(上下有外间隔) -->
    <style name="my_layout_content_margin_style_top_bottom" parent="@android:style/Widget">
        <item name="android:layout_marginTop">@dimen/margin_top_size_default</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_size_default</item>
    </style>

    <!-- 视图内容栏布局样式(四边有内间隔) -->
    <style name="my_layout_content_padding_style" parent="@android:style/Widget">
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
        <item name="android:paddingTop">@dimen/padding_small</item>
        <item name="android:paddingBottom">@dimen/padding_small</item>
    </style>

    <!-- 视图内容栏布局样式（上下有内间隔） -->
    <style name="my_layout_content_padding_style_top_bottom" parent="@android:style/Widget">
        <item name="android:paddingTop">@dimen/padding_top_size_default</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_size_default</item>
    </style>

    <!-- 列表子项内容分割线样式 -->
    <style name="my_listview_item_content_divide_view_style" parent="@android:style/Widget">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- 列表子项主题文字样式 -->
    <style name="my_listview_item_theme_text_style" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_fontsize_normal</item>
    </style>

    <!-- 视图顶部标题文字标签样式 -->
    <style name="my_navbar_title_text_style" parent="@android:style/Widget">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/_333</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_small</item>
        <item name="android:textSize">@dimen/text_fontsize_large</item>
    </style>

    <!-- 视图顶部项普通样式 -->
    <style name="my_navbar_item_style_common" parent="@android:style/Widget">
        <item name="android:layout_width">@dimen/navbar_item_menu_width</item>
        <item name="android:layout_height">@dimen/navbar_layout_height</item>
        <item name="android:padding">12dp</item>
        <item name="android:background">@drawable/top_item_clicked_bg</item>
    </style>

    <!-- 视图顶部文字菜单按钮样式 -->
    <style name="my_navbar_item_textmenu_style" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingLeft">@dimen/padding_medium</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/selector_text_color_nav_item</item>
        <item name="android:textSize">@dimen/text_fontsize_small</item>
    </style>

    <!-- 视图顶部返回按钮样式 -->
    <style name="my_navbar_item_back_menu_style" parent="@style/my_navbar_item_style_common">
        <item name="android:src">@drawable/icon_back</item>
    </style>

    <!-- 视图底部标签菜单布局样式 -->
    <style name="my_bottom_tabbar_item_layout_style" parent="@android:style/Widget">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/tabbar_bg</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 视图底部标签菜单图标样式 -->
    <style name="my_bottom_tabbar_item_icon_style" parent="@android:style/Widget">
        <item name="android:layout_width">@dimen/bottom_tabbar_icon_size</item>
        <item name="android:layout_height">@dimen/bottom_tabbar_icon_size</item>
    </style>

    <!-- 视图底部标签菜单文字样式 -->
    <style name="my_bottom_tabbar_item_text_style" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@drawable/selector_text_color_tabbar_item</item>
        <item name="android:textSize">@dimen/text_fontsize_tiny</item>
        <item name="android:layout_marginTop">@dimen/margin_micro</item>
    </style>

    <!-- 按钮样式(成功) -->
    <style name="my_button_style_success" parent="@android:style/Widget">
        <item name="android:background">@drawable/button_success_bg_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_fontsize_middle</item>
    </style>

    <!-- 按钮样式(原始) -->
    <style name="my_button_style_primary" parent="@android:style/Widget">
        <item name="android:background">@drawable/button_primary_bg_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_fontsize_middle</item>
    </style>

    <!-- 输入框样式(搜索) -->
    <style name="my_edittext_style_search" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/light_dark</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:paddingLeft">@dimen/padding_small</item>
        <item name="android:paddingRight">@dimen/padding_medium</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textCursorDrawable">@drawable/edittext_theme_cursor_color</item>
        <item name="android:drawableLeft">@drawable/icon_search_normal</item>
        <item name="android:drawablePadding">@dimen/padding_tiny</item>
        <item name="android:background">@drawable/bg_edittext_search</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textSize">@dimen/text_fontsize_normal</item>
    </style>

    <!-- 默认列表样式（平角白底带分隔线） -->
    <style name="my_listview_style_default" parent="@android:style/Widget.ListView">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:cacheColorHint">@color/transparent</item>
        <item name="android:divider">@color/divide_line_common</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:listSelector">@drawable/item_clicked_background</item>
    </style>

    <!-- 列表条项右侧更多图标样式 -->
    <style name="my_listview_item_more_icon_style" parent="@android:style/Widget">
        <item name="android:layout_width">@dimen/listitem_more_icon_size</item>
        <item name="android:layout_height">@dimen/listitem_more_icon_size</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/margin_medium</item>
        <item name="android:scaleType">center</item>
        <!--<item name="android:src">@drawable/icon_more_arrow</item>TODO-->
    </style>

    <!-- 视图横向分割线样式 -->
    <style name="my_divide_line_style_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divide_line_common</item>
    </style>

    <!-- 视图横向分割线样式 -->
    <style name="my_divide_line_style_horizontal_special">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/divide_line_special</item>
    </style>

    <!-- 视图竖向分割线样式 -->
    <style name="my_divide_line_style_vertical">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divide_line_common</item>
    </style>

    <!-- 页面默认主题 -->
    <style name="my_theme_style_default" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/my_animation_activity_style_default</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- 页面切换默认动画(从右往左进入) -->
    <style name="my_animation_activity_style_default" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/out_to_right</item>
    </style>

    <!-- 页面淡入淡出主题 -->
    <style name="my_theme_style_fade" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/my_animation_activity_style_fade</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- 页面淡入淡出动画 -->
    <style name="my_animation_activity_style_fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/open_enter_anim</item>
        <item name="android:activityOpenExitAnimation">@anim/open_exit_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/close_enter_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/close_exit_anim</item>
    </style>

    <!-- 与对话框元素样式相关(开始) -->
    <style name="my_dialog_title_text_style" parent="@android:style/Widget">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_fontsize_middle</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="my_dialog_content_text_style" parent="@android:style/Widget">
        <item name="android:textColor">@color/lighter_dark</item>
        <item name="android:textSize">@dimen/text_fontsize_middle</item>
    </style>

    <style name="my_dialog_button_text_style_base">
        <item name="android:textSize">@dimen/text_fontsize_normal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="my_dialog_button_text_style_negative" parent="@style/my_dialog_button_text_style_base">
        <item name="android:textColor">@color/lighter_dark</item>
    </style>

    <style name="my_dialog_button_text_style_positive" parent="@style/my_dialog_button_text_style_base">
        <item name="android:textColor">@color/dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="my_dialog_style_default" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <!-- 与对话框元素样式相关(结束) -->
</resources>